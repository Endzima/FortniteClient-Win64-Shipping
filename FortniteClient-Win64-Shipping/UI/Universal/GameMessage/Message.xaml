<Page x:Class="FortniteClient_Win64_Shipping.UI.Universal.GameMessage.Message"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FortniteClient_Win64_Shipping.UI.Universal.GameMessage"
      mc:Ignorable="d" 
      MinHeight="1080" MinWidth="1920"
      Title="CloseFortnite">

    <Grid Name="Grid">
        <Border Name="Backdrop" Opacity="1">
            <Grid>
                <DockPanel Background="Black" Opacity="0.8"/>
                <Image Source="pack://application:,,,/Content/UI/Misc/OverlayBackdrop.png"/>
            </Grid>
        </Border>
        <TextBlock Name="headerText" Text="" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="36" FontFamily="/Font/BurbankSmall-Bold.ttf#Burbank Small Bold" Foreground="White" Margin="0,0,0,581"/>
        <DockPanel Background="#00534f" Width="720" Height="2" UseLayoutRounding="True" VerticalAlignment="Bottom" Margin="0,0,0,561"/>
        <StackPanel VerticalAlignment="Top" Margin="0,530,0,0">
            <TextBlock Name="descText" Text="" HorizontalAlignment="Center" FontSize="24" FontFamily="/Font/BurbankSmall-Bold.ttf#Burbank Small Bold" Foreground="White" Width="700" TextWrapping="Wrap" TextAlignment="Center"/>
            <Button Name="button1" Click="Close" Style="{StaticResource uibtn2}" Width="150" Height="36" Margin="0,30,0,0" HorizontalAlignment="Center">
                <TextBlock Name="buttonText" Text="Ok" FontFamily="/Font/BurbankSmall-Black.ttf#Burbank Small Black" FontSize="24">
                    <TextBlock.Effect>
                        <DropShadowEffect Color="Black" BlurRadius="0" ShadowDepth="2.5" Opacity="1"/>
                    </TextBlock.Effect>
                </TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
